@{
    ViewData["Title"] = "Contact Us";
}
<! -- -- enhanced with Claude Ai -- -->
<style>
    body {
        background-color: #2f4f4f;
        font-family: Arial, sans-serif;
        color: #fff;
    }

    h1, h2 {
        color: #ffc107;
        text-align: center;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    p {
        font-size: 18px;
        line-height: 1.5;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .contact-container {
        display: flex;
        width: 100%;
        background: #2f4f4f;
    }

    .left-col {
        width: 50%;
        height: 100vh;
        background-size: 150%;
        background-position: center;
        background-repeat: no-repeat;
    }

    .logo {
        width: 20rem;
        padding: 1.5rem;
    }

    .right-col {
        background: #2f4f4f;
        width: 50%;
        padding: 5rem 3.5rem;
    }

    form div {
        margin-bottom: 1rem;
    }

    label {
        color: #ffc107;
        text-transform: uppercase;
        font-size: 0.625rem;
    }

    input, textarea {
        color: #010712;
        font-weight: 500;
        background: #FCFDFD;
        border: 1px solid #818386;
        padding: 0.5rem;
        width: 100%;
        outline: none;
    }

    button {
        text-transform: uppercase;
        font-weight: 300;
        background: #ffc107;
        color: #2f4f4f;
        width: 10rem;
        height: 2.25rem;
        border: none;
        border-radius: 2px;
        outline: none;
        cursor: pointer;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="contact-container">
    <div class="left-col">
        <img class="logo" src="~/images/KhumaloCraftLogo.png" alt="Logo" />
    </div>

    <div class="right-col">
        <h2>Contact us</h2>
        <p>Want to get in touch with us? Please fill out the below form and we will get back to you as soon as possible!</p>

        <form asp-action="ContactUs" method="post">
            <div>
                <label for="name">Full name</label>
                <input type="text" id="name" name="name" required>
            </div>

            <div>
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div>
                <label for="message">Message</label>
                <textarea rows="6" id="message" name="message" required></textarea>
            </div>

            <button type="submit">Send</button>
        </form>
    </div>
</div>
<p>Other ways to contact us:<a href="#"></a></br>
    Telephone: 061 433 6368</br>
    Email: KhumalocraftEmporium@gmail.com

</p>